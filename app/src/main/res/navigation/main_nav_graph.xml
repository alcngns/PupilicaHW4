<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/anasayfaFragment">

    <fragment
        android:id="@+id/anasayfaFragment"
        android:name="com.alicangunes.pupilicahw4.AnasayfaFragment"
        android:label="AnasayfaFragment"
        tools:layout="@layout/fragment_anasayfa">
        <action
            android:id="@+id/action_anasayfa_to_sayfaA"
            app:destination="@id/sayfaAFragment" />
        <action
            android:id="@+id/action_anasayfa_to_sayfaX"
            app:destination="@id/sayfaXFragment" />
    </fragment>
    <fragment
        android:id="@+id/sayfaAFragment"
        android:name="com.alicangunes.pupilicahw4.SayfaAFragment"
        android:label="SayfaAFragment"
        tools:layout="@layout/fragment_sayfa_a">
        <action
            android:id="@+id/action_sayfaA_to_sayfaB"
            app:destination="@id/sayfaBFragment" />
    </fragment>
    <fragment
        android:id="@+id/sayfaBFragment"
        android:name="com.alicangunes.pupilicahw4.SayfaBFragment"
        android:label="SayfaBFragment"
        tools:layout="@layout/fragment_sayfa_b">
        <action
            android:id="@+id/action_sayfaB_to_sayfaY"
            app:destination="@id/sayfaYFragment" />
    </fragment>
    <fragment
        android:id="@+id/sayfaXFragment"
        android:name="com.alicangunes.pupilicahw4.SayfaXFragment"
        android:label="SayfaXFragment"
        tools:layout="@layout/fragment_sayfa_x">
        <action
            android:id="@+id/action_sayfaX_to_sayfaY"
            app:destination="@id/sayfaYFragment" />
    </fragment>
    <fragment
        android:id="@+id/sayfaYFragment"
        android:name="com.alicangunes.pupilicahw4.SayfaYFragment"
        android:label="SayfaYFragment"
        tools:layout="@layout/fragment_sayfa_y">
        <action
            android:id="@+id/action_sayfaY_to_anasayfa"
            app:popUpTo="@id/anasayfaFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>